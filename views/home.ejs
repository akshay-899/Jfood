<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Food Ordering Webpage</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="icon" type="image/png" href="Images/img/favicon-32x32.png">
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@100;300;400;700;900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="stylesheets/home.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
    </head>
  <body>
    <header>
      <nav class="navbar">
        <img src="./images/logo.jpg" class="logo" />
        <ul class="nav-links">
          <li class="nav-items"><a href="/" class="links">Home</a></li>
          <li class="nav-items"><a href="./about" class="links">About Us</a></li>
          <li class="nav-items"><a href="./restaurant" class="links">Restaurants</a></li>
          <li class="nav-items"><a href="./testimonials" class="links">Testimonials</a></li>
        </ul>
    </nav>

      <!---------Hero section-->
      <main id="hero-section">
        <!-----hero-content----->

        <div class="hero-content">
          <h1>Foodies Welcome Here!!</h1>
          <p class="hero-line" style="color: rgba(220, 33, 95, 0.799); text-shadow:1px 2px #F5EC52;"></p>
          <script>
            var typed = new Typed(".hero-line", {
              strings: [
             "Join us on a journey where every bite is a celebration. Order now and let the feast begin.",
             "JFood - Bringing people together, one delicious dish at a time."
                // "Nothing brings people together like a good food.Hundreds of flavors under one roof.Good food. Good mood.",
              ],
              typeSpeed: 50,
              backspeed:50,
              loop:true,
            });
          </script>
          <div>
          </div>
          <div class="hero-btn">
            <button class="btn">Order Now</button>
          </div>
        </div>

        <!------hero image container------->
        <div class="hero-img-container">
          <div class="back-ele">
            <div class="ellipse"></div>
            <div class="ellipse"></div>
            <div class="ellipse"></div>
          </div>
          <div class="foreground-elements">
            <img src="/Images/img4.jpg" class="hero-img" />
            <img src="/Images/img5.jpg" class="hero-img" />
            <img src="/Images/img6.jpg" class="hero-img" />
          </div>
        </div>
      </main>
    </header>
    <footer>
      <div class="container">
        <div class="footer-grid">
          <div class="footer-column">
            <h3>Navigation</h3>
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="./about">About Us</a></li>
              <li><a href="./restaurant">Restaurants</a></li>
              <li><a href="./testimonials">Testimonials</a></li>
            </ul>
          </div>

          <div class="footer-column">
            <h3>Social Media</h3>
            <ul class="social-media">
              <li>
                <a href="https://www.facebook.com/" target="_blank">
                  <i class="fa fa-facebook"></i>
                  <span>Facebook</span>
                </a>
              </li>
              <li>
                <a href="https://www.instagram.com/" target="_blank">
                  <i class="fa fa-instagram"></i>
                  <span>Instagram</span>
                </a>
              </li>
              <li>
                <a href="https://twitter.com/" target="_blank">
                  <i class="fa fa-twitter"></i>
                  <span>Twitter</span>
                </a>
              </li>
            </ul>
          </div>

          <div class="footer-column">
            <h3>Legal</h3>
            <ul class="legal-links">
              <li><a href="#">Terms & Conditions</a></li>
              <li><a href="#">Privacy Policy</a></li>
              <li><a href="#">Contact Us</a></li>
            </ul>
          </div>

          <div class="footer-column">
            <h3>Contact</h3>
            <ul class="contact-info">
              <li><i class="fa fa-phone"></i> +1 234 567 890</li>
              <li><i class="fa fa-envelope"></i> info@jfood.com</li>
              <li>
                <i class="fa fa-map-marker"></i> 123 Main Street, City, State
                12345
              </li>
            </ul>
          </div>
        </div>

        <div class="copyright">&copy; 2023 JFOOD. All rights reserved.</div>
      </div>
    </footer>
    <script>
 const foodOrderBtn = document.querySelector('.btn');

foodOrderBtn.addEventListener('click', () => {
  window.location.href = './restaurant'; // Replace with your actual file path
});


    </script>
  </body>
</html>
