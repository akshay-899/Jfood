<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Menu</title>
    <style>
        body {
            background-image: url(./images/background.png);
            background-repeat: no-repeat;
            width: 100%;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            background-size: cover;
        }

        header {
            background-color: #f7e9e9;
            color: #fff;
            text-align: center;
            padding: 1em;
        }
        nav{
    width: 100%;
    height: 80px;
    line-height: 80px;
    display:flex;
    justify-content:space-between;
}
.logo a{
    font-size:39px;
    color:red;
    font-weight:bold;
    margin-left:100px;
}
a{
    text-decoration:none;
    color:red;
    font-size:18px;
    transition: 0.5s all ease;
}
ul{
    margin: 0px;
    margin-right:100px;
}
ul li{
    float: left;
    padding: 0px 15px;
    list-style: none;
}
ul li a:hover{
    color:rgb(167, 63, 184);
    text-decoration: underline;
}

        section {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            padding: 20px;
        }

        .menu-item {
            width: 300px;
            margin: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            overflow: hidden;
            background-color: #fff;
            transition: transform 0.3s ease;
        }

        .menu-item:hover {
            transform: scale(1.05);
        }

        img {
            width: 300px;
            height:200px;
        }

        .item-info {
            padding: 10px;
        }

        h3, p {
            margin: 0;
        }
        /* #img{
            height: 100;
            width: 100;
        } */
        @media only screen and (max-width: 600px) {
            .menu-item {
                width: calc(100% - 40px);
            }
        }
    </style>
</head>
<body>
    
    <nav>
        
        <div class="logo">
            <a href="">JFOOD</a>
        </div>
        <ul>
            <li><a href="./">HOME</a></li>
            <li><a href="./about">ABOUT</a></li>
            <li><a href="./food">FOOD</a></li>
            <li><a href="./review">REVIEWS</a></li>
            <!-- <li><a href="">SERVICES</a></li> -->
            <li><a href="./contact">CONTACT</a></li>
        </ul>
    </nav>
    <header>
        <h1>Restaurant Menu</h1>
    </header>

    <section id="menu-container">
        <!-- Menu items will be dynamically added here using JavaScript -->
    </section>

    <script>
        // Sample menu data (you can replace it with your actual menu data)
        const menuData = [
            { name: 'Burger', description: 'Lorem ipsum dolor sit amet.', price: 'Rs.189', image:'./images/background.png' },
            { name: 'Noodles', description: 'Consectetur adipiscing elit.', price: 'Rs.289', image: './images/background.png' },
            { name: 'Sandwitch', description: 'Pellentesque habitant morbi tristique senectus.', price: 'Rs.399', image: './images/background.png' },
            { name: 'Spring roll', description: 'Pellentesque habitant morbi tristique senectus.', price: 'Rs.399', image: './images/background.png' },
            { name: 'Pizza', description: 'Pellentesque habitant morbi tristique senectus.', price: 'Rs.399', image: './images/background.png' },
            { name: 'Veg Chowmein', description: 'Pellentesque habitant morbi tristique senectus.', price: 'Rs.359', image: './images/background.png' },
            { name: 'Pasta', description: 'Pellentesque habitant morbi tristique senectus.', price: 'Rs.259', image: './images/background.png' },
            { name: 'Shangai Roll', description: 'Pellentesque habitant morbi tristique senectus.', price: 'Rs.189', image: './images/background.png' },
            { name: 'momos', description: 'Pellentesque habitant morbi tristique senectus.', price: 'Rs.259', image: './images/background.png' },
        ];

        const menuContainer = document.getElementById('menu-container');

        // Function to generate HTML for each menu item
        function generateMenuItem(item) {
            return `
                <div class="menu-item">
                    <img src="${item.image}" alt="${item.name}">
                    <div class="item-info">
                        <h3>${item.name}</h3>
                        <p>${item.description}</p>
                        <p>${item.price}</p>
                    </div>
                </div>
            `;
        }

        // Add menu items to the menu container
        menuData.forEach(item => {
            const menuItemHTML = generateMenuItem(item);
            menuContainer.innerHTML += menuItemHTML;
        });
    </script>

</body>
</html>